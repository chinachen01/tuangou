<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="我的"
            android:textColor="@color/txt_deep"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_user_mine_login" 
            android:gravity="center"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还没有登录"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录" 
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/deal_sperator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_click_textview"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_user_coupon"
                android:gravity="center"
                android:text="美团卷" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/deal_sperator" />

            <TextView
                style="@style/user_click_textview"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_user_main_favorite"
                android:gravity="center"
                android:text="我的收藏" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_neargroupon"
            android:text="团购订单" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_history"
            android:text="预定订单" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_phone"
            android:text="上门订单" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_review"
            android:text="我的评价" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_order_account_recommend_enable"
            android:text="每日推荐" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_history"
            android:text="会员俱乐部" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_order_lottery_enable"
            android:text="我的抽奖" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deal_sperator" />

        <TextView
            style="@style/user_click_textview"
            android:drawableLeft="@drawable/ic_business_detail_neargroupon"
            android:text="我的抵用卷" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deal_sperator" />
    </LinearLayout>

</ScrollView>