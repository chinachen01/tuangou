<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/regist_msg_user_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/msg_username_txt"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regist_username_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="15dp"
        android:paddingLeft="70dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/regist_clear_name_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/regist_msg_user_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_clear_btn"
        android:clickable="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/regist_msg_name_hint_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:text="@string/msg_username1_txt"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/regist_msg_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_msg_name_hint_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/msg_password_btx"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regist_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_msg_name_hint_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:inputType="textPassword"
        android:paddingBottom="15dp"
        android:paddingLeft="70dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/regist_clear_password_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/regist_msg_password_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_clear_btn"
        android:clickable="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/regist_msg_password_hint_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_msg_name_hint_txt"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:text="@string/msg_password1_txt"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/regist_regist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/regist_password_edit"
        android:background="@drawable/selector_login_press_btn"
        android:text="注册"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/regist_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/regist_regist_btn"
        android:background="@drawable/selector_login_press_btn"
        android:text="返回"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/regist_exist_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/regist_back_btn"
        android:layout_marginTop="20dp"
        android:text="用户名已存在"
        android:visibility="invisible"
        android:textColor="#23238E"
        android:textSize="14sp" />
    

    <TextView
        android:id="@+id/regist_msg_show_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Meituan Connect"
        android:textColor="#23238E"
        android:textSize="14sp" />

</RelativeLayout>