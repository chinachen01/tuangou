<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/simple_icon_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher" 
        android:scaleType="centerCrop"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/simple_title_textview"
        android:layout_toRightOf="@id/simple_icon_image"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textSize="18sp" 
        android:text="text1"
        android:textColor="@color/txt_deep"/>

    <TextView
        android:id="@+id/simple_content_textview"
        android:layout_below="@id/simple_title_textview"
         android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/simple_icon_image"
        android:layout_toRightOf="@id/simple_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:textSize="16sp" 
        android:text="text2"/>

</RelativeLayout>